[core]
	editor = vim
	whitespace = fix, trailing-space, cr-at-eol
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = meld
[http]
	sslVerify = true
[push]
	default = simple
[include]
    path = ~/.gitconfig_local
